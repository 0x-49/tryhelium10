---
const { stat, description, className } = Astro.props;
---

<div class:list={["group relative overflow-hidden rounded-xl bg-gradient-to-b from-blue-50 to-white p-6 shadow-lg transition-all hover:shadow-xl", className]}>
  <div class="relative z-10">
    <p class="text-4xl font-bold text-blue-900 transition-transform group-hover:scale-110">
      {stat}
    </p>
    <p class="mt-2 text-sm text-gray-600">
      {description}
    </p>
  </div>
  <div class="absolute -inset-4 z-0 bg-gradient-to-r from-blue-500/20 to-purple-500/20 opacity-0 blur transition-all group-hover:opacity-100"></div>
</div>
