---
import { Sun, Moon } from 'lucide-astro';
---

<button
  id="theme-toggle"
  class="fixed top-4 right-4 z-50 p-2 rounded-full bg-white dark:bg-gray-800 shadow-lg hover:shadow-xl transition-all duration-300 group"
  aria-label="Toggle Dark Mode"
>
  <Sun class="w-6 h-6 text-amber-500 dark:hidden transition-transform group-hover:rotate-12" />
  <Moon class="w-6 h-6 text-blue-400 hidden dark:block transition-transform group-hover:rotate-12" />
</button>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  
  function setTheme(theme: string) {
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
    localStorage.setItem('theme', theme);
  }

  // Initialize theme (default to light)
  const savedTheme = localStorage.getItem('theme') || 'light';
  setTheme(savedTheme);

  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.contains('dark');
    setTheme(isDark ? 'light' : 'dark');
  });
</script>
